// 🌙/☀️ Mode nuit
document.getElementById("modeToggle").onclick = () => {
  document.body.classList.toggle("dark");
};

// 📊 Calcul de la moyenne
document.getElementById("calcBtn").onclick = () => {
  let s1 = document.querySelector("tr:nth-child(1) .s1").value;
  let td = document.querySelector("tr:nth-child(1) .td").value;
  let moyenneEmbryo = ((s1 * 2) + Number(td)) / 3;

  let s1b = document.querySelector("tr:nth-child(2) .s1").value;
  let s2b = document.querySelector("tr:nth-child(2) .s2").value;
  let moyenneBio = (Number(s1b) + Number(s2b)) / 2;

  let result = (moyenneEmbryo * 1 + moyenneBio * 2) / 16 * 16;
  document.getElementById("result").innerText = "Moyenne générale : " + result.toFixed(2);
  alert("✅ Résultat : " + result.toFixed(2));
};

// 🔑 Admin accès
document.getElementById("adminBtn").onclick = () => {
  let code = prompt("Entrez le code secret :");
  if (code === "aziz1968") {
    alert("✅ Connecté avec succès comme administrateur – Bienvenue Nesraoui Amine 👨‍⚕️");
    document.getElementById("uploadSection").style.display = "block";
  } else {
    alert("❌ Code incorrect !");
  }
};
